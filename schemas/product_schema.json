{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fake Store Product",
  "description": "Schema for a single product object from Fake Store API",
  "type": "object",
  "required": ["id", "title", "price", "description", "category", "image", "rating"],
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1
    },
    "title": {
      "type": "string"
    },
    "price": {
      "type": "number",
      "minimum": 0
    },
    "description": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "image": {
      "type": "string",
      "format": "uri"
    },
    "rating": {
      "type": "object",
      "required": ["rate", "count"],
      "properties": {
        "rate": {
          "type": "number"
        },
        "count": {
          "type": "integer"
        }
      }
    }
  },
  "additionalProperties": false
}